<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronunciation Practice"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Sentence Display Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/sentence_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Pronunciation Practice! 🎯"
                        android:textSize="18sp"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="4dp"
                        android:gravity="center"
                        android:minHeight="100dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/instruction_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📝 Instructions will appear here"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loading_progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="?android:attr/progressBarStyle" />

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Generate Button -->
                <Button
                    android:id="@+id/generate_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Generate Sentence"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary_background"
                    android:backgroundTint="@null"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp" />


                <!-- Audio Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Play Button -->
                    <ImageButton
                        android:id="@+id/play_button"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginEnd="300px"
                        android:background="@drawable/button_circular_background"
                        android:contentDescription="Play pronunciation"
                        android:elevation="6dp"
                        android:enabled="false"
                        android:src="@drawable/ic_play_arrow" />

                    <!-- Record Button -->
                    <ImageButton
                        android:id="@+id/record_button"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/button_circular_background"
                        android:contentDescription="Record your voice"
                        android:elevation="6dp"
                        android:enabled="false"
                        android:src="@drawable/ic_mic" />

                </LinearLayout>

                <!-- Button Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/baseline_play_arrow_24"
                        android:text="Listen"
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"
                        android:gravity="center"
                        android:layout_marginEnd="24dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/baseline_mic_24"
                        android:text="Record"
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- Tips Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E8F5E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 Pro Tips"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#27AE60"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Speak clearly and at moderate speed\n• Find a quiet environment for recording\n• Listen to the sentence multiple times\n• Focus on difficult words first"
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
